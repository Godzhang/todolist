/*弹窗样式*/
.task-area{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
.task-area-bg{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, .5);
}
.task-box{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 600rpx;
	background: #fff;
	transition: height .5s;
	box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, .2);
}
.task-head{
	height: 120rpx;
	line-height: 120rpx;
	padding: 0 30rpx;
	background: #a3382e;
}
.task-title{
	float: left;
	font-size: 40rpx;
	color: #fff;
}
.task-close,
.task-sure{
	position: relative;
	float: right;
	width: 100rpx;
	height: 100rpx;
	margin-top: 10rpx;
}
.task-close image{
	width: 50rpx;
	height: 50rpx;
	margin: 25rpx;	
}
.task-sure image{
	width: 60rpx;
	height: 60rpx;
	margin: 20rpx;
}

.task-body{
	position: relative;
	padding: 25rpx 40rpx;
}
.task-name{
	position: relative;
	min-height: 60rpx;
	line-height: 60rpx;
	border-bottom: 4rpx solid #f8564b;
	font-size: 40rpx;
}
.task-name input{
	height: 60rpx;
	padding-right: 10%;
	color: #000;
}
.task-name .placehold{
	position: absolute;
	top: 0;
	left: 0;
	height: 60rpx;
	padding-right: 10%;
	color: #f8564b;
	transition: all .3s;
	overflow: hidden;
}
.task-name .placehold.float{
	top: -40rpx;
	font-size: 20rpx;
}
.task-name image{
	position: absolute;
	top: 50%;
	right: 0;
	width: 40rpx;
	height: 40rpx;
	transform: translateY(-50%);
}
.task-type{
	width: 80%;
}
.task-time-mode{
	width: 70%;
}
.task-minutes{
	width: 70%;
}
.task-item{
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
	height: 60rpx;
	margin: 25rpx auto 0;
}
.task-item text{
	display: block;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 10rpx;
	border-radius: 10rpx;
	font-size: 28rpx;
	color: #5c5c5c;
	background: #f5f5f5;
}
.task-item text.selected{
	color: #579dd9;
	background: #ecf5fc;
}
.task-note{
	margin: 10rpx 0;
	height: 30rpx;
	line-height: 30rpx;
	font-size: 20rpx;
	color: #5c5c5c;
	text-align: center;
}
.more-options{
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
}
.more-options text{
	display: inline-block;
	padding: 0 10rpx;
	border-radius: 10rpx;
	font-size: 28rpx;
	color: #579dd9;
	background: #ecf5fc;
}