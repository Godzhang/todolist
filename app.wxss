page,
.container{
	width: 100%;
	height: 100%;
}
.order-list{
	box-sizing: border-box;
	height: 100%;
	padding: 40rpx;
}
.order-item{
	position: relative;
	height: 160rpx;
	box-sizing: border-box;
	padding: 20rpx 140rpx 20rpx 20rpx;
	box-shadow: 0rpx 4rpx 4rpx rgba(0, 0, 0, .3);
	color: #fff;
	overflow: hidden;
}
.order-list .order-item+.order-item{
	margin-top: 15rpx;
}
.order-bg{
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
	width: 100%;
	height: 160rpx;
}
.order-title,
.order-content{
	display: block;
	height: 30rpx;
	max-width: 510rpx;
	line-height: 30rpx;
	font-size: 28rpx;
	overflow: hidden;
}
.order-title{}
.order-content{
	position: absolute;
	bottom: 20rpx;
	left: 20rpx;
}
.order-start-button{
	position: absolute;
	display: block;
	right: 0;
	top: 0;
	width: 160rpx;
	height: 160rpx;
	line-height: 160rpx;
	text-align: center;
	font-size: 40rpx;
}
.addTask-btn{
	position: fixed;
	right: 40rpx;
	bottom: 100rpx;
	width: 100rpx;
	height: 100rpx;
	background: #f8564b;
	border-radius: 50%;
}
.addTask-btn text{
	display: block;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 50rpx;
	height: 10rpx;
	background: #fff;
	border-radius: 10rpx;
}
.addTask-btn text:after{
	content: '';
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 10rpx;
	height: 50rpx;
	background: #fff;
	border-radius: 10rpx;
}

